h2 #{t_admin(:all)} #{t_model(:<%= @orm.name_singular %>)}

ul class="tabs"
  li class="active" == link_to t_admin(:list), url(:<%= @orm.name_plural %>, :index)
  li == link_to t_admin(:new), url(:<%= @orm.name_plural %>, :new)

div class="tabs-content"
  table class="zebra-striped"
    thead
      tr
        <%- @orm.columns.each_with_index do |column, i| -%>
        th class="blue.header" == t_attr(:<%= @orm.name_singular %>, :<%= column.name %>)
        <%- end -%>
        th class="blue header action" &nbsp;
    tbody
      -@<%= @orm.name_plural %>.each do |<%= @orm.name_singular %>|
        tr
          <%- @orm.columns.each_with_index do |column, i| -%>
          td == <%= @orm.name_singular %>.<%= column.name %>
          <%- end -%>
          td class="action"
            == button_to(:edit, url(:<%= @orm.name_plural %>, :edit, :id => <%= @orm.name_singular %>.id),:method => :get, :class => 'pull-left' ) { submit_tag t_admin(:edit), :class =>'btn primary' }
            == button_to(:delete, url(:<%= @orm.name_plural %>, :destroy, :id => <%= @orm.name_singular %>.id),:method => :delete, :class => 'pull-left', :onsubmit => "return confirm('#{pat(:confirm)}')") { submit_tag t_admin(:delete), :class =>'btn danger' }
