%h2 #{t_admin(:all)} #{t_model(:<%= @orm.name_singular %>)}

%ul.nav.nav-tabs
  %li=link_to ti("list", t_admin(:list)), url(:<%= @orm.name_plural %>, :index)
  %li.active=link_to ti("plus", t_admin(:new)), url(:<%= @orm.name_plural %>, :new)

.tabs-content
  -form_for :<%= @orm.name_singular %>, url(:<%= @orm.name_plural %>, :create), :class => 'form-horizontal' do |f|
    =partial '<%= @orm.name_plural %>/form', :locals => { :f => f }
