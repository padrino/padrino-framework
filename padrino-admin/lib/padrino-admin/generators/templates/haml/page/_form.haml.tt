=error_messages_for :<%= @orm.name_singular %>, :class =>'hide', :header_tag => 'h4'

<%- @orm.column_fields.each do |column| -%>
%fieldset.control-group
  =f.label :<%= column[:name] %>, :class => 'control-label'
  .controls
    =f.<%= column[:field_type] %> :<%= column[:name] %>
    %p.help-block Ex: a simple text
<%- end -%>

.actions
  =f.submit t_admin(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit t_admin(:save_and_continue), :class => 'btn btn-primary', :name => 'save_and_continue'
  &nbsp;
  =f.submit t_admin(:cancel), :onclick => "window.location='#{url(:<%= @orm.name_plural %>, :index)}';return false", :class => 'btn'
